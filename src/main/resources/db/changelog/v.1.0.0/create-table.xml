<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <changeSet id="create-table-conversion_rates" author="Vladimir Chernov">
        <createTable tableName="conversion_rates">
            <column name="base_code" type="varchar(5)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="target_code" type="varchar(5)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="time_last_update" type="bigint">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="time_next_update" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="conversion_rate" type="numeric(38, 4)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>